  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-route.min.js')
  script(src='/js/bootstrap.js')
  script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-resource.min.js') 
  script(src='/javascripts/home.client.controller.js')
  script(src='/javascripts/main.js')
  //script(src='/javascripts/signup.controller.js')
  //script(src='/javascripts/App.controller.js')
  script.
    var PatioWeb = angular.module('PatioWeb', []);
    PatioWeb.controller('SignupController', function($scope, $http, $location){
    $('#submit').click(function(){
      if(username == "" || password ==""){
        alert('Please login ');
      }
      else{
        alert('You have successfully signup. Proceed login page to login');
      }
      
    });
    });


