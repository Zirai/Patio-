html(ng-app='PatioWeb')
  head
    title Welcome to Patio!
    link(rel='stylesheet', type='text/css', href='../css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='../css/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')

  body(ng-controller ='SignupController')
    nav.navbar.navbar-default.navbar-fixed-top.nav-color
      .navbar-inner
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='index')
                img#logo(alt='Logo', src='../img/Patio.png')
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='index') Home
              li
                a(href='apps') Apps
              li
                a(href='article') Article
            ul.nav.navbar-nav.navbar-right
              li
                a.signup-link(data-target='#login', href='loginPage') Login
              li
                a.signup-link(data-target='#signup', href='signupPage') Sign Up

    #push-before
        .container.ff-neue-form.narrow
            .wrapper
            
            .alert.alert-success(ng-if='vm.message', role='alert')
              p {{ vm.message }}
            .alert.alert-danger(ng-if='vm.error', role='alert')
              | {{ vm.error }}
            form( ng-hide='vm.message', name='form', ng-submit='vm.register()').form-signin
                h2.form-signin-heading Please Sign Up
                h4 Welcome : {{user.username}}
                input.form-control(type='text',id='username', name='username', placeholder='Username',ng-model="user.username", required  , autofocus='')
                input.form-control(type='password',id='password',  name='password', placeholder='Password',ng-model="user.password", required)
                button.btn.btn-lg.btn-primary.btn-block(type='submit',id="submit", ng-disabled='form.$invalid') Signup


    .users.footer
      .content
        .columns
          .column.patio
            .title
              h4 Patio
              .underline
            ul.footer-links
              li
                a.link(href='#') About us
              li
                a.link(href='#') Contact us
              li
                a.link(href='#') Blog
              li
                a.link(href='#') Join us

          .column.about-us
            .title
              h4 About Us
              .underline
            p.text Hi Hello and Bye
              
     

